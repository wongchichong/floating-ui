{
  "extends": "config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@floating-ui/dom": [
        "../dom/src/index.ts"
      ],
      "@floating-ui/dom/*": [
        "../dom/src/*"
      ],
      "extension": [
        "../../extension/src/index.ts"
      ],
      "extension/*": [
        "../../extension/src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../dom/tsconfig.lib.json"
    },
    {
      "path": "../../extension/tsconfig.lib.json"
    }
  ]
}