{
  "extends": "config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    // FIXME: resize-observer-polyfill is conflicting with DOM typings
    "skipLibCheck": true
  },
  "include": [
    "test",
    "vite.config.mts"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}